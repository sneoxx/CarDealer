<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.cardealer.web.carmodel.CarModelEdit"
        datasource="carModelDs"
        messagesPack="com.company.cardealer.web.carmodel">
    <dsContext>
        <datasource id="carModelDs"
                    class="com.company.cardealer.entity.CarModel"
                    view="carModel-edit">
        </datasource>
    </dsContext>
    <layout expand="tabsheet"
            height="100%"
            spacing="true"
            width="100%">
        <tabSheet id="tabsheet">
            <tab id="mainTab"
                 caption="msg://mainTab"
                 margin="true">
                <scrollBox id="scrollBox56"
                           height="100%">
                    <fieldGroup id="fieldGroup"
                                datasource="carModelDs">
                        <column width="250px">
                            <field id="name"/>
                            <field id="code"/>
                            <field id="comment"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
            </tab>
        </tabSheet>
        <iframe id="windowActions"
                screen="editWindowActions"/>
    </layout>
</window>
