<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://templateBrowseCaption"
        class="com.company.cardealer.web.carpurchaseapplication.CarPurchaseApplicationBrowse"
        extends="com/company/cardealer/web/carpurchaseapplication/carpurchaseapplication-browse.xml">
    <dsContext>
        <groupDatasource id="cardsDs">
            <query>
                <![CDATA[select distinct d from cardealer$CarPurchaseApplication d where d.template = true and d.versionOf is null order by d.templateName]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="carsDs"
                              class="com.company.cardealer.entity.Car"
                              view="_minimal">
            <query>
                <![CDATA[select e from cardealer$Car e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="split"
            spacing="true">
        <split id="split">
            <vbox id="table-panel">
                <groupTable id="cardsTable">
                    <buttonsPanel id="buttonsPanel">
                        <button action="cardsTable.excel"
                                visible="false"/>
                        <button id="refreshBtn"
                                visible="false"/>
                        <button id="createDocBtn"
                                visible="true"/>
                        <runReportPopupButton id="printButton"
                                              description="msg://print"
                                              icon="icons/reports-print.png"/>
                    </buttonsPanel>
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="createDoc"/>
                        <action id="deleteNotification"
                                visible="false"/>
                        <action id="showLink"
                                visible="false"/>
                    </actions>
                    <columns>
                        <column id="templateName"
                                caption="msg://templateName"
                                visible="true"/>
                        <column id="important"
                                visible="false"/>
                        <column id="locState"
                                visible="false"/>
                        <column id="date"
                                visible="false"/>
                        <column id="number"
                                visible="false"/>
                        <column id="substitutedCreator"
                                caption="msg://creator"/>
                        <column id="proc.name"
                                caption="msg://procName"
                                visible="false"/>
                    </columns>
                </groupTable>
            </vbox>
            <tabSheet id="cardDetailsTabSheet"
                      visible="false"/>
        </split>
    </layout>
</window>
